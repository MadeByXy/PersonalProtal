<?xml version="1.0" encoding="utf-8"?>

<configuration>
  <appSettings>
    <add key="ConnectionString" value="Provider=Microsoft.ACE.OLEDB.12.0;Data Source=|DataDirectory|/PersonalPortal.accdb;Persist Security Info=False"/>
  </appSettings>
  <system.web>
    <compilation debug="true" targetFramework="4.5.2"/>
    <httpRuntime targetFramework="4.5.2"/>
    <httpModules>
    </httpModules>
  </system.web>
  <system.webServer>
    <defaultDocument>
      <files>
        <add value="Views/Index.html"></add>
      </files>
    </defaultDocument>
    <rewrite>
      <rules>
        <rule name="Html">
          <match url="^(|Views/)([a-zA-Z0-9]{1,})(|\.html)$"/>
          <action type="Rewrite" url="Views/{R:2}.html"/>
        </rule>
        <rule name="ApiController">
          <match url="^Controller/([a-zA-Z0-9]*)/([a-zA-Z0-9]*)"/>
          <action type="Rewrite" url="Controller.ashx?Controller={R:1}/{R:2}"/>
        </rule>
      </rules>
    </rewrite>
    <httpRedirect enabled="false" destination=""/>
    <httpProtocol>
      <customHeaders>
        <remove name="X-Powered-By"/>
      </customHeaders>
    </httpProtocol>
  </system.webServer>
</configuration>